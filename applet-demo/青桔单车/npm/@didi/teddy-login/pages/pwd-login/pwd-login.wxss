.phone-input {
    position: relative;
    height: 48rpx;
    padding: 32rpx 44rpx;
    background: #fff;
}

.phone-input .input {
    margin-right: 40rpx;
    font-size: 16px;
    color: #333;
}

.phone-input .input:focus {
    font-size: 16px;
}

.phone-input .close {
    position: absolute;
    right: 52rpx;
    top: 38rpx;
    font-size: 36rpx;
    color: #999;
}

.phone-input .input-placeholder {
    color: #999;
}

.warning {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #e64340;
    opacity: 0;
    transition: all 0.3s;
}

.warning.show {
    opacity: 1;
}

.warning .warning-title {
    font-size: 14px;
    color: #fff;
}

