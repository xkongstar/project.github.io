.warning {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #e64340;
    opacity: 0;
    transition: all 0.3s;
}

.warning.show {
    opacity: 1;
}

.warning .warning-title {
    font-size: 14px;
    color: #fff;
}

page {
    background: #f3f4f5;
}

.captcha {
    text-align: center;
}

.captcha .title {
    margin: 152rpx 0 26rpx 0;
    font-size: 20px;
}

.captcha .desc {
    font-size: 14px;
    color: #999;
}

.captcha .image-wrapper {
    display: inline-block;
    margin: 48rpx 0 96rpx 0;
    width: 460rpx;
    height: 120rpx;
    background-color: #fafafa;
}

.captcha .image-wrapper image {
    width: 460rpx;
    height: 120rpx;
}

.captcha .canvas-wrapper {
    display: flex;
    margin: 0 auto;
    width: 460rpx;
}

.captcha .canvas-wrapper .canvas-item {
    flex: 1;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin-right: 20rpx;
    text-align: center;
    border: 2rpx solid rgba(102,102,102,0.5);
    font-size: 30px;
}

.captcha .canvas-wrapper .canvas-item:last-child {
    margin-right: 0;
}

.captcha .canvas-wrapper .canvas-item.current {
    border-color: #fc9153;
}

.captcha .hidden-input {
    position: relative;
    top: -150px;
    left: -2000px;
    height: 0;
}