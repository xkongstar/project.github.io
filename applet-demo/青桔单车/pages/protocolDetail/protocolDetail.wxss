.btn-box {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 140rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn-box .btn {
    width: 45%;
    margin-right: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70%;
    border: 1rpx solid #666;
    border-radius: 4rpx;
    font-size: 38rpx;
    background: #fff;
}

.btn-box .btn.on {
    background: #666;
    color: #fff;
}