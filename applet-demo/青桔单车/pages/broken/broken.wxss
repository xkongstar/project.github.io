.broken {
    width: 100%;
    height: 100%;
}

.broken image {
    display: block;
    width: 320rpx;
    height: 320rpx;
    margin: 128rpx auto 84rpx auto;
    opacity: .75;
}

.broken text {
    display: block;
    text-align: center;
}

.broken text:nth-child(2) {
    font-size: 40rpx;
    color: #333;
    line-height: 56rpx;
}

.broken text:nth-child(3) {
    font-size: 28rpx;
    color: #666;
    line-height: 42rpx;
    padding-top: 32rpx;
}

.mf-btn {
    width: 610rpx;
    height: 100rpx;
    border-radius: 4rpx;
    padding: 32rpx 32rpx;
    font-size: 32rpx;
}

.mf-btn:nth-child(4) {
    margin: 60rpx auto auto auto;
}

.mf-btn:nth-child(5) {
    background: #fff;
    color: #666;
    margin: 20rpx auto auto auto;
    border: 2rpx solid #666;
}