.userInfo {
    height: 323rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 12rpx;
    background: #fff;
}

.userInfo .userInfo-head {
    height: 120rpx;
    width: 120rpx;
    border-radius: 100%;
}

.userInfo .userInfo-name {
    margin: 11rpx 0;
    font-size: 36rpx;
    color: #333;
}

.userInfo .userInfo-phone {
    color: #666;
    font-size: 24rpx;
}

.userInfo-list {
    background: #fff;
    color: #333;
    margin-bottom: 20rpx;
}

.userInfo-list .userInfo-list-item {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 136rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}

.userInfo-list .userInfo-list-item .icon_type {
    width: 32rpx;
    height: 32rpx;
    margin: 0 21rpx 30rpx 32rpx;
}

.userInfo-list .userInfo-list-item .icon_right {
    width: 32rpx;
    height: 32rpx;
    margin-right: 39rpx;
}

.userInfo-list .userInfo-list-item .userInfo-list-item-r {
    flex: 1;
}

.userInfo-list .userInfo-list-item .userInfo-list-item-r .orColor {
    color: #fc9153;
}

.userInfo-list .userInfo-list-item .userInfo-list-item-r .userInfo-list-item-rt {
    font-size: 32rpx;
}

.userInfo-list .userInfo-list-item .userInfo-list-item-r .userInfo-list-item-rb {
    font-size: 20rpx;
    color: #999;
}

.red-tips {
    position: absolute;
    left: 55rpx;
    top: 32rpx;
    width: 15rpx;
    height: 15rpx;
    border-radius: 7.5rpx;
    background: #ff525d;
}

.layout_btn {
    height: 100rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fc9153;
    font-size: 28rpx;
}

.fix-bottom {
    font-size: 20rpx;
    color: #666;
    text-align: center;
    position: fixed;
    width: 100%;
    bottom: 40rpx;
}

.fix-bottom2 {
    font-size: 20rpx;
    color: #666;
    text-align: center;
    position: fixed;
    width: 100%;
    bottom: 10rpx;
}