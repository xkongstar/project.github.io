<!--pages/getRecorderManager/getRecorderManager.wxml-->
<button bindtap="start">开始录音</button>
<button bindtap="pause" style="margin-top: 30rpx;">暂停录音</button>
<button bindtap="resume" style="margin-top: 30rpx;">继续录音</button>
<button bindtap="stop" style="margin-top: 30rpx;">结束录音</button>
<button bindtap="playStart" style="margin-top: 30rpx;">播放开始</button>
<button bindtap="playPause" style="margin-top: 30rpx;">播放暂停</button>
<button bindtap="playStop" style="margin-top: 30rpx;">播放停止</button>
<button bindtap="playSeek" style="margin-top: 30rpx;">跳转到指定位置</button>
<button bindtap="playBackgroundAudio" style="margin-top: 30rpx;">背景音频播放</button>




