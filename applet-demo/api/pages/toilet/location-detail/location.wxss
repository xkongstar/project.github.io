/*全局引入UI库*/
@import "../resources/lib/zanui/index.wxss";
/**app.wxss**/
page{
    margin: 0;
    padding: 0;
}
text{
    font-family: "微软雅黑"
}
.container {
    background: #F9F9F9;
    overflow: hidden;
    min-height: 100vh;
    box-sizing: border-box;
}
.container::before {
    position: fixed;
    top: 0;
    left: 0;
    content: ' ';
    width: 100%;
    height: 1rpx;
    background-color: #e2e2e2;
    z-index: 5;
}
.zan-panel {
    margin-top: 0;
}

.scroll {
    margin-top: -1rpx;
    height: calc(100vh);
}